{% extends 'userArea/layoutUserArea.njk' %}

{% block menu_filter %}
  <form action="/" method="GET">
    <input
      type="text"
      name="filter"
      placeholder="Buscar uma receita"
    >
    <button type="submit">Buscar</button>
  </form>
{% endblock %}

{% block content %}
  <h2>Buscando por "{{ filter }}"</h2>
  <div class="content-block">
    {% for item in recipes %}
      <div id="{{ item.id }}" class="card">
        <a href="/recipes/{{ item.id }}">
          <img src="{{ item.image }}" alt="Imagem de {{ item.title }}">
          <h4>{{ item.title }}</h4>
          <span>por {{ item.chefsname }}</span>
        </a>
      </div>
    {% endfor %}
  </div>
{% endblock %}
